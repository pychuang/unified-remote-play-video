<?xml version="1.0" encoding="utf-8"?>
<layout>
	<row weight="1">
		<button color="green" icon="vdown" onTap="volume_down" />
		<button color="green" icon="vmute" onTap="volume_mute" />
		<button color="green" icon="vup" onTap="volume_up" />
	</row>
	<row weight="1">
		<button color="orange" icon="arrowleft" ontap="leftkey" />
		<button color="orange" icon="arrowright" ontap="rightkey" />
	</row>
	<row weight="4">
		<touch id="touch"
			ondown="down"
			onup="up"
			onhold="hold"
			ontap="tap"
			ondoubletap="double"
			ontouchdelta="delta"
			text="Touch!" />
	  </row>
</layout>
